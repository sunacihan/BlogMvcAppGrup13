@model IEnumerable<BlogMvcApp.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Kategori Listesi</h2>
<hr />

<p>
    @Html.ActionLink("Kategori Ekle", "Create", null, new {@class= "btn btn-primary"})
</p>
<hr />
@if (TempData["Kategori"] != null)
{
    var kategori = (BlogMvcApp.Models.Category)TempData["Kategori"];

<div class="alert alert-success" role="alert">
    <strong>@kategori.KategoriAdi</strong> Kayıt Edildi.
</div>
}
<hr />
<table class="table table-bordered table-hover table-striped" >
    <tr>
        <th style="width:76%;">
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th style="width:14px;">Blog Sayısı</th>
        <th ></th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAdi)
            
        </td>
        <td>
           @item.BlogSayisi
        </td>
       
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.Id },new { @class = "btn btn-warning btn-xs" }) 
            @Html.ActionLink("Sil", "Delete", new { id=item.Id },new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
