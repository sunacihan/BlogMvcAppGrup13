@model IEnumerable<BlogMvcApp.Models.BlogModel>

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

@foreach (var item in Model)
{
    <h1>@item.Baslik</h1>
    <hr />
    <p>
        <span class="glyphicon glyphicon-time">
            @item.EklenmeTarihi
        </span>
    </p>
    <hr />
    <img class="img-responsive" src="~/img/@item.Resim" />
    <hr />
    <blockquote>
        @item.Aciklama
    </blockquote>
    <p>
        @item.Icerik
    </p>
}


